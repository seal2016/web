
@{
    ViewBag.Title = "ConsultaDeuda";
    Layout = "";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5><i class="fa fa-area-chart"></i> Consulta de deuda</h5>
        </div>
        <div class="ibox-content">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-lg-2 control-label">Suministro</label>
                    <div class="col-lg-10">
                        <input placeholder="" class="form-control" ng-model="contrato" readonly>
                    </div>
                </div>               
                <div class="form-group">
                    <label class="col-lg-2 control-label">Fecha Vencimiento</label>
                    <div class="col-lg-10">
                        <input placeholder="" class="form-control" ng-model="UltimoDiaPago" readonly>
                    </div>
                </div>                
                <div class="form-group">
                    <label class="col-lg-2 control-label">Monto Pagado</label>
                    <div class="col-lg-10">
                        <input placeholder="" class="form-control" ng-model="MontoDeudaTotal" readonly>
                    </div>
                </div>                
            </form>
        </div>
    </div>
</div>

