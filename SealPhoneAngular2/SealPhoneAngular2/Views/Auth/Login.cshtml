@{
    ViewBag.Title = "Login";
}

<div class="wrapper wrapper-content">
    <div class="container">

        <div class="loginColumns animated fadeInDown">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="ibox-content">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <input type="text" required="" placeholder="Usuario" class="form-control" name="AccountName">
                            </div>
                            <div class="form-group">
                                <input type="password" required="" placeholder="Password" class="form-control" name="Password">
                            </div>
                            <button class="btn btn-info block full-width m-b" type="submit">Login</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

